{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "react", "import", "unicorn"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "rules": {
    "no-unused-vars": "warn",
    "typescript/no-explicit-any": "warn"
  },
  "ignorePatterns": ["dist", "src-tauri", "src/bindings.ts"],
  "env": {
    "browser": true
  }
}
